<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UserList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_v</item>
    </style>

    <style name="TodoSubTitle">
        <item name="android:drawableTint">@color/primary_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="TodoTitle">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/primary_variant</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="textButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>